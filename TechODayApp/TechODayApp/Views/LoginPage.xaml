<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="TechODayApp.Views.LoginPage"
             Shell.NavBarIsVisible="False">
    <ContentPage.Content>
        <StackLayout Padding="10,0,10,0" VerticalOptions="Center">
            <Button x:Name="driverClick" VerticalOptions="Center" Text="Login As Driver" Clicked="driverClick_Clicked"/>
            <Button x:Name="passengerClick" VerticalOptions="Center" Text="Login As User" Command="{Binding PassengerLoginCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>