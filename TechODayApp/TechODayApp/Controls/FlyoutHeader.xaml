<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TechODayApp.Controls.FlyoutHeader">
    <Grid BackgroundColor="GhostWhite">
        <Frame>
            <Frame.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="#79AC78"
                          Offset="0.1" />
                    <GradientStop Color="#618264"
                          Offset="1.0" />
                </LinearGradientBrush>
            </Frame.Background>
             <Label FontAttributes="Bold" TextColor="GhostWhite" FontSize="Large"  Text="LANCER" HorizontalOptions="EndAndExpand"/>
        </Frame>
    </Grid>
</ContentView>